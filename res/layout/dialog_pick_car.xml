<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/light_green"
        android:gravity="center"
        android:text="@string/pick_car"
        android:textColor="#121212"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/car_scion"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/white_to_green_selector"
            android:contentDescription="@string/pick_car"
            android:padding="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/car" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#44111111" />

        <ImageView
            android:id="@+id/car_subaru"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/white_to_green_selector"
            android:contentDescription="@string/pick_car"
            android:padding="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/subaru" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44111111" />

</LinearLayout>