<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA111111"
    android:orientation="vertical"
    tools:context=".MapActivity" >

    <ImageView
        android:id="@+id/bg_map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_map" />

    <ImageView
        android:id="@+id/bicycle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bicycle" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/bicycle"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/car" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_map"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Find Bicycle"
            android:textSize="15sp"
            android:textColor="#121212" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Find Car"
            android:textSize="15sp"
            android:textColor="#121212" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Add Note"
            android:textSize="15sp"
            android:textColor="#121212" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Save"
            android:textSize="15sp"
            android:textColor="#121212" />
    </LinearLayout>

</RelativeLayout>